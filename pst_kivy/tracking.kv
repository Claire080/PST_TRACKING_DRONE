#:import MDDropdownMenu kivymd.uix.menu.MDDropdownMenu
#:import Image kivy.uix.image.Image


<Tracking>:
    MDFloatLayout:
        cols: 10

        # image du tracking
        Image:
            id: tracking_image
            size_hint_x: 1.5
            size_hint_y: 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDLabel:
            text: "Photo"
            font_size: 12
            pos_hint: {"center_x": 0.93, "center_y": .84}
            text_color: 1, 0, 0, 1

        MDLabel:
            text: "Video"
            font_size: 12
            pos_hint: {"center_x": 1.02, "center_y": .84}
            text_color: 1, 0, 0, 1

        # CAMERA ICON
        MDIconButton:
            id: camera
            cols: 5
            pos_hint: {"center_x": .45, "center_y": .9}
            icon: "camera"
            icon_size: "200sp"
            on_press:
                root.take_photo()

        # VIDEO ICON
        MDIconButton:
            cols: 5
            pos_hint: {"center_x": .55, "center_y": .9}
            icon: "video"
            icon_size: "200sp"
            on_press:
                root.take_video()

         # TAKE-OFF BUTTON
        MDFillRoundFlatIconButton:
            icon: "arrow-up-thick"
            text: "TAKE OFF"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            theme_icon_color: "Custom"
            icon_color: 1, 1, 1, .5
            pos_hint: {"center_x": .7, "center_y": .2}
            size_hint: .2, .2
            on_press:
                root.take_off()
                opacity: 0
                disabled: True

        MDFillRoundFlatIconButton:
            id: btn_land
            icon: "arrow-up-thick"
            text: "Land"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            theme_icon_color: "Custom"
            icon_color: 1, 1, 1, .5
            pos_hint: {"center_x": .3, "center_y": .2}
            size_hint: .2, .2
            on_press:
                root.land()